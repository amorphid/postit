<%= form_for [@post, @comment] do |i| %>
  <% if @comment.errors.any? %>
    <p>
      <%= pluralize(@comment.errors.count, "error") %>
      prohibited this post from being saved:
    </p>

    <ul>
      <% @comment.errors.full_messages.each do |msg| %>
        <li>
          <%= msg %>
        </li>
      <% end %>
    </ul>
  <% end %>

  <p>
    <%= i.text_field :body %>
    <%= i.submit "Add Comment" %>
  </p>
<% end %>
