<h1>Post</h1>

<%= link_to "Edit", edit_post_path(@post) %>


<p>
  <%= link_to "\u25B2", post_votes_path(@post, value: 1), method: :post %><br />
  <%= @post.score %><br />
  <%= link_to "\u25BC", post_votes_path(@post, value: -1), method: :post %><br />
  <%= link_to @post.title, "#{@post.url}" %><br />
  <%= link_to "#{pluralize(@post.comments.count, "comment")}", post_path(@post) %>
</p>


<p>
  URL:
  <%= @post.url %>
</p>

<%= render "comments/form" %>

<ul>
  <% @comments.each do |comment| %>
    <li>
      <%= comment.body %>
    </li>
  <% end %>
</ul>
