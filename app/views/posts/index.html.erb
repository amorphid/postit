<h1>Posts</h1>

<ul>
  <% @posts.each do |post| %>
    <li>
    	<%= link_to "+", post_votes_path(post, value: 1), method: :post %>
    	<%= pluralize(post.votes.count, "vote") %><br />
      <%= link_to post.title, "#{post.url}" %><br />
      <%= link_to "#{pluralize(post.comments.count, "comment")}", post_path(post) %>
    </li>
  <% end %>
</ul>
