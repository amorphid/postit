<h1>Posts</h1>

<ul class="posts">
  <% @posts.each do |post| %>
    <li>
    	<%= link_to "", post_votes_path(post, value: 1), class: "icon-chevron-up upvote" %>
      <br />
      <span class="score">
        <%= post.score %>
      </span>
      <br />
      <%= link_to "", post_votes_path(post, value: -1), class: "downvote icon-chevron-down" %>
      <br />
      <%= link_to post.title, "#{post.url}" %>
      <br />
      <%= link_to "#{pluralize(post.comments.count, "comment")}", post_path(post) %>
    </li>
  <% end %>
</ul>
